@model MMC2.Models.Projeto

@{
    ViewBag.Title = "Criar um novo Projeto";
}
@section Scripts {
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.3.custom.min.js"></script>
    <script src="~/Scripts/jquery.maskedinput.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
          
            $("#lnkVoltar").button({ icons: { primary: "ui-icon-arrowreturnthick-1-w" } });
            $("#btnSalvar").button({
                icons: {
                    primary: "ui-icon-disk"
                },
                text: false
            })
        });
    </script>
}



<h2>Novo Projeto</h2>

<div id="criar_projeto">

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <div style=" border:1px; float:left;  margin:10px">
       
                            <div class="editor-label">
                                @Html.Label("* Nome de identificação")
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.Nome)
                                @Html.ValidationMessageFor(model => model.Nome)
                            </div>
                            
                            <div class="editor-label" >
                                @Html.Label("* Data de início")
                            </div>
                            <div class="editor-field"> 
                                @Html.EditorFor(model => model.DataInicio)
                                @Html.ValidationMessageFor(model => model.DataInicio)
                            </div>
                                
                            <div class="editor-label">
                                @Html.Label("* Data final estimada")
                            </div>
                             <div class="editor-field">
                                @Html.EditorFor(model => model.DataFinal)
                                @Html.ValidationMessageFor(model => model.DataFinal)
                             </div>
                            
                            <div class="editor-label" >
                                @Html.Label("Descrição do projeto")
                            </div>
                            <div class="editor-field">
                                @Html.TextAreaFor(model => model.Descricao)
                                @Html.ValidationMessageFor(model => model.Descricao)
                            </div>
   </div>
    <br />
    
    <div style=" border:1px; float:left;  margin:10px">

                            
                            <div class="editor-label" >
                                @Html.LabelFor(model => model.Cliente_Id, "* Cliente")
                            </div>
                             <div class="editor-field" >
                                @Html.DropDownList("Cliente_Id", String.Empty)
                                @Html.ValidationMessageFor(model => model.Cliente_Id)
                            </div>


                            @*<div class="editor-label" >
                                @Html.LabelFor(model => model.Gerente_Id, "* Gerente do Projeto")
                            </div>
                             <div class="editor-field" >
                                @Html.DropDownList("Gerente_Id", String.Empty)
                                @Html.ValidationMessageFor(model => model.Gerente_Id)
                            </div>*@
                            
                              <div class="editor-label" >
                                @Html.Label("* Valor estimado")
                            </div>
                             <div class="editor-label" >
                                @Html.EditorFor(model => model.Valor)
                                @Html.ValidationMessageFor(model => model.Valor)
                             </div>

     
        <p>
            <input type="submit" value="Criar projeto" id="btnSalvar" />
        </p>
     <div>
    @Html.ActionLink("Voltar para a Lista", "Index", null,  new { id = "lnkVoltar" })
     </div>
   
  </div>
}

</div>




