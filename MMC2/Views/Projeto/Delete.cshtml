
@model MMC2.Models.Projeto

@{
    ViewBag.Title = "Excluir Projeto";
}
@section Scripts {
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.3.custom.min.js"></script>
    <script src="~/Scripts/jquery.maskedinput.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
           
            $("#lnkVoltar").button({ icons: { primary: "ui-icon-arrowreturnthick-1-w" } });
            $("#btnSalvar").button({
                icons: {
                    primary: "ui-icon-disk"
                },
                text: false
            })
        });
    </script>
}
<h2>Excluir Projeto</h2>

<h3 style="color:red;">Você tem certeza que deseja excluir este projeto?</h3>
<div id="detalhes_projeto">

    <table>
        <tr>
            <td>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.Nome)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Nome)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="display-label">
                    @Html.DisplayNameFor(model => model.DataInicio)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.DataInicio)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="display-label">
                    @Html.DisplayNameFor(model => model.DataFinal)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.DataFinal)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="display-label">
                    @Html.DisplayNameFor(model => model.Descricao)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Descricao)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="display-label">
                    @Html.DisplayName("Status do Projeto")
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Status.Nome)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="display-label">
                    @Html.DisplayName("Cliente")
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Cliente.Nome)
                </div>
            </td>
        </tr>
         <tr>
            <td>
                <div class="display-label">
                    @Html.DisplayName("Gerente do Projeto")
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Usuario.Nome)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="display-label">
                    @Html.DisplayName("Data de criação do projeto")
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.DataHora)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="display-label">
                    @Html.DisplayName("Valor estimado")
                </div>
                <div class="display-field">
                @Html.DisplayFor(model => model.Valor)
            </td>
        </tr>

    </table>

    

</div>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Excluir" id="btnSalvar" /> 
         @Html.ActionLink("Voltar para a Lista", "Index", null,  new { id = "lnkVoltar" })
        
    </p>
}
