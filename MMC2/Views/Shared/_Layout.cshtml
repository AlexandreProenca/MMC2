<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - SGHP</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="~/Content/cupertino/jquery-ui-1.10.3.custom.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <img alt="Logo" src="~/Images/logo.png" />
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul id="menu">
                       
                 
                       
                        @if (Session["-USUARIO"] != null)
                        {
                            if (Session["-PAPEL"].ToString() == "Desenvolvedor" )
                            {
                            <li>@Html.ActionLink("Dashbord", "Create", "Dashuser")</li>
                            @*<li>@Html.ActionLink("Historicos", "Index", "Historico")</li>*@
                            }
                            else if (Session["-PAPEL"].ToString() == "Gerente")
                            {
                            
                            <li>@Html.ActionLink("Dashbord", "Index", "Dashbord")</li>
                            <li>@Html.ActionLink("Clientes", "Index", "Cliente")</li>
                            <li>@Html.ActionLink("Tarefas", "Index", "Tarefa")</li>
                            <li>@Html.ActionLink("Historicos", "Index", "Historico")</li>
                            <li>@Html.ActionLink("Atribuir habilidades", "Index", "Skill")</li>
                            
                            }
                            else if (Session["-PAPEL"].ToString() == "Administrador")
                            {
                                    <li>@Html.ActionLink("Dashbord", "Index", "Dashbord")</li>    
                                    <li>@Html.ActionLink("Clientes", "Index", "Cliente")</li>
                                    <li>@Html.ActionLink("Históricos", "Index", "Historico")</li>
                                    <li>@Html.ActionLink("Projetos", "Index", "Projeto")</li>
                                    <li>@Html.ActionLink("Tarefas", "Index", "Tarefa")</li>
                                    <li>@Html.ActionLink("Atribuir habilidades", "Index", "Skill")</li>
                                    <li>@Html.ActionLink("Habilidades", "Index", "TipoSkill")</li>
                                    <li>@Html.ActionLink("Usuarios", "Index", "Usuario")</li>
                                    <li>@Html.ActionLink("Status", "Index", "Status")</li>
                                    <li>@Html.ActionLink("Setores", "Index", "Setor")</li>
                                    <li>@Html.ActionLink("Relatórios", "Index", "Relatorio")</li>
                            }
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year -SGHP Software de acompanhamento de tarefas em projetos de software</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
