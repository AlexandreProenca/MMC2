@model IEnumerable<MMC2.Models.Tarefa>

@{
    ViewBag.Title = "Tarefas";
    WebGrid grid = new WebGrid(Model, rowsPerPage: 5, ajaxUpdateContainerId: "gridContent");
}

<h2>Tarefas</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div id="gridContentClientes">
@grid.GetHtml(
    tableStyle: "gridTable",
    headerStyle: "gridHead", 
    footerStyle:"gridFooter",
	rowStyle:"gridRow", 
    alternatingRowStyle: "gridAltRow",
    htmlAttributes: new { id = "grid-dash" },
    columns: new [] {
    grid.Column("Nome",header:"Tarefa"),
    grid.Column("DataInicio",header:"Data de Inicio",format:p=>p.DataInicio.ToShortDateString()),
    grid.Column("DataFinal",header:"Data de Entrega",format:p=>p.DataFinal.ToShortDateString()),
    grid.Column("Porcentagem",header:"Porcentagem"),
    grid.Column("Status.Nome",header:"Status"),
    grid.Column("Projeto.Nome",header:"Projeto"),
    grid.Column("Prioridade",header:"Prioridade"),
    grid.Column("Usuario.Nome",header:"Usuário"),
    grid.Column("TempoEstimado",header:"Duração"),
    grid.Column("Descricao",header:"Descrição"),
    grid.Column("",header:"Editar",format:@<text> @Html.ActionLink("Editar", "Edit", new { id=item.Id }) </text>, style:"gridBtn"),
    grid.Column("",header:"Visualizar",format:@<text> @Html.ActionLink("Detalhar", "Details", new { id=item.Id }) </text>, style:"gridBtn"),
    grid.Column("",header:"Deletar",format:@<text> @Html.ActionLink("Remover", "Delete", new { id=item.Id }) </text>, style:"gridBtn")
})
</div>

