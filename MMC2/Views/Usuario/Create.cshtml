@model MMC2.Models.Usuario

@{
    ViewBag.Title = "Novo";
}

@section Scripts {
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.3.custom.min.js"></script>
    <script src="~/Scripts/jquery.maskedinput.js"></script>
    <script src="~/Scripts/price_format.1.7.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tabs").tabs();
            $("#Cliente_DataHora").datepicker();
            $("#Cliente_Cnpj").mask("99.999.999/9999-99");
            $("#lnkVoltar").button({ icons: { primary: "ui-icon-arrowreturnthick-1-w" } });
            $("#btnSalvar").button({
                icons: {
                    primary: "ui-icon-disk"
                },
                text: false
            });
            //$('#CustoHora').priceFormat({
            //    prefix: 'R$ ',
            //    centsSeparator: ',',
            //    thousandsSeparator: '.'
            //});
        });
    </script>
}

<h2>Novo Usuário</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Usuario</legend>
        
                <table>
            <tr>
                <td>
                    <table style="padding: 10px;">
                        <tr>
                            <td>
                                <div class="editor-label">
                                    @Html.LabelFor(model => model.Nome)
                                </div>
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.Nome)
                                    @Html.ValidationMessageFor(model => model.Nome)
                                </div>
                            </td>
                            <td>

                                <div class="editor-label">
                                    @Html.LabelFor(model => model.Setor_Id, "Setor")
                                </div>
                                <div class="editor-field">
                                    @Html.DropDownList("Setor_Id", String.Empty)
                                    @Html.ValidationMessageFor(model => model.Setor_Id)
                                </div>
                            </td>
                        </tr>
                    </table>
                    <table style="padding: 10px;">

                        <tr>
                            <td>
                                <div class="editor-label">
                                    @Html.LabelFor(model => model.Email)
                                </div>
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.Email)
                                    @Html.ValidationMessageFor(model => model.Email)
                                </div>
                            </td>
                            <td>
                                <div class="editor-label">
                                    @Html.LabelFor(model => model.Senha)
                                </div>
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.Senha)
                                    @Html.ValidationMessageFor(model => model.Senha)
                                </div>
                            </td>
                        </tr>
                    </table>
                    <table style="padding: 10px;">
                        <tr>
                            <td>
                                <div class="editor-label">
                                    @Html.LabelFor(model => model.TipoUsuario,"Perfil")
                                </div>
                                <div class="editor-field">
                                    @{
                                        var items = new List<SelectListItem>{
                                        new SelectListItem {Value = "Desenvolvedor", Text = "Desenvolvedor"},
                                        new SelectListItem {Value = "Gerente", Text = "Gerente de projetos"},
                                        new SelectListItem {Value = "Administrador", Text = "Administrador do sistema"},
                                        };
                                    }

                                    @Html.DropDownList("TipoUsuario", items)
                                </div>
                            </td>
                            <td>
                                <div class="editor-label">
                                    @Html.LabelFor(model => model.CustoHora, "Valor custo/hora")
                                </div>
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.CustoHora)
                                    @Html.ValidationMessageFor(model => model.CustoHora)
                                </div>
                            </td>
                        </tr>
                    </table>
                   @* <table style="padding: 10px;">
                        <tr>
                            <td>
                                <div class="editor-label">
                                    @Html.LabelFor(model => model.Ativo)
                                </div>
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.Ativo)
                                    @Html.ValidationMessageFor(model => model.Ativo)
                                </div>
                            </td>
                        </tr>
                    </table>*@
                </td>
            </tr>
        </table>
        <p>
            <input type="submit" id="btnSalvar" value="Criar" />
        </p>
    </fieldset>
}

<div style="clear: both;">
    @Html.ActionLink("Voltar para a lista", "Index", null, new { id = "lnkVoltar" })
</div>

